@model IEnumerable<BankCreditSystem.Domain.Entities.CreditApplication>

@{
    ViewData["Title"] = "Список заявок на кредит";
}

<h2>Список заявок</h2>

<table class="table">
    <thead>
        <tr>
            <th>№ заявки</th>
            <th>Клиент</th>
            <th>Сумма</th>
            <th>Срок (мес.)</th>
            <th>Статус</th>
            <th>Дата подачи</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.CreditApplicationId</td>
                <td>@app.Client?.LastName @app.Client?.FirstName</td>
                <td>@app.Amount</td>
                <td>@app.TermMonths</td>
                <td>@app.Status</td>
                <td>@app.ApplicationDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = app.CreditApplicationId })">Детали</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = app.CreditApplicationId })">Редактировать</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = app.CreditApplicationId })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("Create")">Подать новую заявку</a>
