@model BankCreditSystem.Domain.Entities.CreditApplication

@{
    ViewData["Title"] = "Удаление заявки";
}

<h2>Удалить заявку</h2>

<div>
    <p>Вы действительно хотите удалить заявку № @Model.CreditApplicationId?</p>
    <dl class="row">
        <dt class="col-sm-3">Клиент</dt>
        <dd class="col-sm-9">@Model.Client?.LastName @Model.Client?.FirstName</dd>
        <dt class="col-sm-3">Сумма</dt>
        <dd class="col-sm-9">@Model.Amount</dd>
        <dt class="col-sm-3">Дата подачи</dt>
        <dd class="col-sm-9">@Model.ApplicationDate.ToString("dd.MM.yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CreditApplicationId" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
    </form>
</div>
