@model BankCreditSystem.Domain.Entities.Client

@{
    ViewData["Title"] = "Новый клиент";
}

<h2>Добавить нового клиента</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" placeholder="Введите фамилию" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" placeholder="Введите имя" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MiddleName"></label>
        <input asp-for="MiddleName" class="form-control" placeholder="Введите отчество (необязательно)" />
        <span asp-validation-for="MiddleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PassportData"></label>
        <input asp-for="PassportData" class="form-control" placeholder="Введите паспортные данные" />
        <span asp-validation-for="PassportData" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Income"></label>
        <input asp-for="Income" class="form-control" type="number" step="0.01" placeholder="Введите доход" />
        <span asp-validation-for="Income" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreditHistory"></label>
        <input asp-for="CreditHistory" class="form-control" placeholder="Введите кредитную историю (если есть)" />
        <span asp-validation-for="CreditHistory" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Добавить клиента</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
