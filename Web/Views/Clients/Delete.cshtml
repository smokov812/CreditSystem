@model BankCreditSystem.Domain.Entities.Client

@{
    ViewData["Title"] = "Удаление клиента";
}

<h2>Удаление клиента</h2>

<div>
    <h4>Вы действительно хотите удалить этого клиента?</h4>
    <dl class="row">
        <dt class="col-sm-3">ClientId</dt>
        <dd class="col-sm-9">@Model.ClientId</dd>
        <dt class="col-sm-3">Фамилия</dt>
        <dd class="col-sm-9">@Model.LastName</dd>
        <dt class="col-sm-3">Имя</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>
        <dt class="col-sm-3">Паспорт</dt>
        <dd class="col-sm-9">@Model.PassportData</dd>
    </dl>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ClientId" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Отмена</a>
    </form>
</div>
